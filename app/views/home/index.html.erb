<% unless logged_in? %>
    <% content_for :title, "Home - CONECOFOR" %>
    <% content_for :head do %>
        <%= stylesheet_link_tag "home"%>
    <%end%>

    <div id="float">
    <div id="login_border">
        <div id="login_box">
            <% form_tag sessions_path do %>
                <p class ="log_line">
                    <%= label_tag :login, "Email Address" %><br />
                    <%= text_field_tag :login, params[:login] %>
                </p>
                <p class ="log_line">
                    <%= label_tag :password %><br />
                    <%= password_field_tag :password %>
                </p>
                <p class ="log_line">
                    <%= check_box_tag :remember_me, 1, params[:remember_me] %>
                    <%= label_tag :remember_me %>
                </p>
                <p class ="log_line_last"><%= submit_tag "Log in" %></p>
            <% end %>
        </div>
    </div>
    <div id="image">

    </div>
    <div id="registration">
      <h2>Registrazione Rilevatori</h2>
      <p class="reg_desc">
        Se sei un rilevatore designato, clicca su
        <strong>
          <%= link_to "Registrati", signup_path %>
        </strong>

        per poter in seguito accedere allo strumento.
      </p>
      <p class="null_margin">
        <strong>Attenzione</strong> <em>quest'area è riservata solamente ai membri facenti parte del team del progetto</em>.
      </p>
    </div>
    </div>

<div id="presentation">
  <h1>Benvenuto in Conecofor!</h1>
