

<% if !@plot.blank? %>
  <% if @message %>
   <div id="message">
    <p class="advice"><%= @message %></p>
   </div>
  <% end %>

    <table id="head">
      <tbody>
      <tr>
        <th>Identificativo</th>
        <th>Descrizione</th>
        <th>Numero</th>
        <th>Latitudine</th>
        <th>Longitudine</th>
        <th>Altitudine</th>
        <th>IM</th>
        <th>Note</th>
        <th class="bigger">Opzioni</th>
      </tr>
      </tbody>
    </table>
    <div id="ver_scroll">
    <table id="body">
      <tbody>
      <% for i in 0..@plot.size-1 %>
          <tr>
            <td><%= @plot.at(i).id_plot %></td>
            <td><%= @plot.at(i).descrizione %></td>
            <td><%= @plot.at(i).numero_plot %></td>
            <td><%= @plot.at(i).latitudine %></td>
            <td><%= @plot.at(i).longitudine %></td>
            <td><%= @plot.at(i).altitudine %></td>
            <td><%= @plot.at(i).im %></td>
            <td><%= @plot.at(i).note %></td>
            <td class="bigger">
              <%= button_to_remote "Modifica", :url => { :controller =>"admin/plot",:action => "edit", :id =>@plot.at(i).id, :i => i} %>
              <%= button_to_remote "Elimina", :url => { :controller =>"admin/plot",:action => "delete", :id =>@plot.at(i).id}, :confirm => "Eliminando questo plot cancellerai tutti i dati ad esso legati. Vuoi davvero eliminare questo plot?" %>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>
    </div>

<% else %>

    <p class="desc"><strong>Nessun plot presente</strong></p>

<% end %>