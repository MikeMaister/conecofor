<div id="orz_scroll">
<div id="head_wrap">
<table class = "comp head">
  <tbody>
  <tr>
    <th>Plot</th>
    <% unless @subplot.blank? %>
        <th>Subplot</th>
    <% end %>
    <% unless @inout.blank? %>
        <th>In/Out</th>
    <% end %>
    <% unless @priest.blank? %>
        <th>Pri/Est</th>
    <% end %>
    <% unless @cod_strato.blank? %>
        <th>Codice Strato</th>
    <% end %>
    <% unless @specie.blank? %>
        <th class="bigger">EU Code</th>
        <th class="bigger">EU Descrizione</th>
        <th class="bigger">Specie</th>
    <% end %>
    <th>Max</th>
    <th>Min</th>
    <th>Med</th>
    <th>Std</th>
    <th>Ste</th>
    <th>Cov</th>
    <th>N</th>
    <th class="bigger">Note</th>
  </tr>
  </tbody>
</table>
</div>
  <br />
<div id="comp_ver_scroll">
<table class="comp body">
  <tbody>
  <% for i in 0..@stat_list.size-1 %>
      <tr>
        <td><%= @stat_list.at(i).plot %></td>
        <% unless @subplot.blank? %>
            <td> <%= @stat_list.at(i).subplot %> </td>
        <% end %>
        <% unless @inout.blank? %>
            <td><%= @stat_list.at(i).inout %></td>
        <% end %>
        <% unless @priest.blank? %>
            <td><%= @stat_list.at(i).priest %></td>
        <% end %>
        <% unless @cod_strato.blank? %>
            <td><%= @stat_list.at(i).cod_strato %></td>
        <% end %>
        <% unless @specie.blank? %>
            <td class="bigger"><%= @stat_list.at(i).eucode %></td>
            <td class="bigger"><%= @stat_list.at(i).eudesc %></td>
            <td class="bigger"><%= @stat_list.at(i).specie %></td>
        <% end %>
        <td><%= @stat_list.at(i).max %></td>
        <td><%= @stat_list.at(i).min %></td>
        <td><%= @stat_list.at(i).med %></td>
        <td><%= @stat_list.at(i).std %></td>
        <td><%= @stat_list.at(i).ste %></td>
        <td><%= @stat_list.at(i).cov %></td>
        <td><%= @stat_list.at(i).n %></td>
        <td class="bigger"><%= @stat_list.at(i).note %></td>
      </tr>
  <% end %>
  </tbody>
</table>
</div>
</div>

<p id="download">
  <%= link_to "Download File", download_stat_path %>
</p>
