<h1>Simplerange Errors</h1>
<table>
  <tbody>
  <tr>
    <th colspan="13">
      <%= @file.file_name %>
    </th>
  </tr>
  <tr>
    <th>Row</th>
    <th>Error</th>
    <th>Data</th>
    <th>Plot</th>
    <th>Subplot</th>
    <th>In/Out</th>
    <th>Pri/Est</th>
    <th>Strato</th>
    <th>Specie</th>
    <th>Copertura</th>
    <th>Note</th>
    <th>Substrate</th>
    <th>Certainty Species Determination</th>
  </tr>
  <% for i in 0..@sr_err.size-1%>
      <tr>
        <td><%= @sr_err.at(i).row %></td>
        <td><%= @sr_err.at(i).error %></td>
        <td><%= @sr_err.at(i).data %></td>
        <td><%= @sr_err.at(i).plot %></td>
        <td><%= @sr_err.at(i).subplot %></td>
        <td><%= @sr_err.at(i).in_out %></td>
        <td><%= @sr_err.at(i).priest %></td>
        <td><%= @sr_err.at(i).codice_strato %></td>
        <td><%= @sr_err.at(i).specie %></td>
        <td><%= @sr_err.at(i).copertura %></td>
        <td><%= @sr_err.at(i).note %></td>
        <td><%= @sr_err.at(i).substrate_code %></td>
        <td><%= @sr_err.at(i).certainty_species_determination_code %></td>
      </tr>
  <% end %>
  </tbody>
</table>


<% unless @sr_warning.blank? %>
    <% form_tag({:action => "force_warning"}) do %>
    <h3>Warnings</h3>
    <table>
      <tbody>
      <tr>
        <th colspan="2">
          <%= @file.file_name %>
        </th>
      </tr>
      <tr>
        <th>Error</th>
        <th>Specie</th>
        <th>Giustifica</th>
      </tr>
      <% for i in 0..@sr_warning.size-1%>
          <tr>
            <td><%= @sr_warning.at(i).error %></td>
            <td><%= @sr_warning.at(i).specie %></td>
            <td>
              <% if session[:sr_error] == false && session[:sr_warning] == true  %>
                <input id="<%= "giustifica" + i.to_s %>" name="giustifica[]" type="text" />
              <% end %>
            </td>
          </tr>
      <% end %>
      <tr>
        <td>
          <% if session[:sr_error] == false && session[:sr_warning] == true  %>
              <%= submit_tag "Forza e Procedi" %>
          <% end %>
        </td>
      </tr>
      </tbody>
    </table>
    <% end %>
<% end %>



<p>
  <%= button_to_function("Print this Page", "javascript:print()") %>
</p>