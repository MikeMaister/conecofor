<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <title><%= h(yield(:title) || "Untitled") %></title>
    <%= stylesheet_link_tag 'application' %>
    <%= yield(:head) %>
    <%= javascript_include_tag :defaults %>
    <% require 'calendar_date_select' %>
    <%= calendar_date_select_includes :style => 'silver'%>
  </head>
  <body>



    <div id="pre_head"></div>
    <div id="wrap">
      <div id="header"></div>
      <div id="logo"></div>
      <% if logged_in? %>
          <div id="banner_menu">
            <div class="button">
              <p class="b_link">
                <%= link_to "Home", root_path %>
              </p>
            </div>
            <div class="button">
              <p class="b_link">
                <%= link_to "Account" %>
              </p>
            </div>
            <div class="button">
              <p class="b_link">
                <%= link_to "Contatti" %>
              </p>
            </div>
            <div class="button">
              <p class="b_link">
                <%= link_to "Log Out", logout_path %>
              </p>
            </div>
          </div>
      <% end %>

      <%= yield(:up_message) %>

      <%- flash.each do |name, msg| -%>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <%- end -%>

      <div id= "remote_message" style="display:none;">
      </div>

      <%- if show_title? -%>
        <h1><%=h yield(:title) %></h1>
      <%- end -%>

      <%= yield %>

      <div id="foot">
        <p id="foot_message">Â©2013 Michele Balestrini All rigth reserved</p>
      </div>
    </div>


  </body>
</html>
